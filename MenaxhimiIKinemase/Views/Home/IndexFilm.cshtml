@model IEnumerable<MenaxhimiIKinemase.Models.Film>


<link href="~/css/filma.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 col-sm-8">
                <div class="thumbnail">
                    <img alt="" src="@("~/img/" + item.MoviePicture) " asp-append-version="true" style="width:100%; height:300px;" class="rounded">
                    <div class="caption">
                        <h3>@Html.DisplayFor(modelItem => item.Titulli)</h3>
                        @*<h6>Premiera : @Html.DisplayFor(modelItem => item.Premiera) </h6>*@
                        <button class="details"><a asp-action="IndexDetails" asp-route-id="@item.FilmiID">Details</a></button>
                    </div>
                </div>
            </div>
        }
    </div>


</div>